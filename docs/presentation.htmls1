<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Developer Portfolio Mini-Site Analysis</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: #000;
            overflow: hidden;
            height: 100vh;
        }

        .presentation {
            width: 100%;
            height: 100vh;
            position: relative;
        }

        .slide {
            width: 100%;
            height: 100vh;
            background: #f5f5f5;
            color: #1a1a1a;
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 60px;
            position: absolute;
            top: 0;
            left: 0;
        }

        .slide.active {
            display: flex;
        }

        h1 {
            font-size: 3.5em;
            margin-bottom: 30px;
            color: #1a1a1a;
            text-align: center;
        }

        h2 {
            font-size: 2.5em;
            margin-bottom: 40px;
            color: #1a1a1a;
            border-bottom: 4px solid #333;
            padding-bottom: 15px;
            width: 100%;
            text-align: left;
        }

        .subtitle {
            font-size: 1.5em;
            color: #333;
            margin: 10px 0;
            font-weight: bold;
        }

        .info {
            font-size: 1.2em;
            color: #666;
            margin: 5px 0;
            font-style: italic;
        }

        ul {
            list-style: none;
            font-size: 1.4em;
            line-height: 2;
            width: 100%;
            max-width: 900px;
        }

        li {
            margin: 15px 0;
            padding-left: 20px;
        }

        li strong {
            color: #000;
            font-weight: bold;
        }

        .image-container {
            width: 100%;
            height: 70vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        img {
            max-width: 90%;
            max-height: 100%;
            object-fit: contain;
            border: 3px solid #333;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

        .caption {
            font-size: 1em;
            color: #666;
            font-style: italic;
            margin-top: 20px;
        }

        .controls {
            position: fixed;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0,0,0,0.8);
            padding: 15px 25px;
            border-radius: 30px;
            display: flex;
            gap: 20px;
            align-items: center;
            z-index: 1000;
        }

        .controls button {
            background: transparent;
            border: none;
            color: #fff;
            font-size: 24px;
            cursor: pointer;
            padding: 5px 15px;
            transition: opacity 0.3s;
        }

        .controls button:hover {
            opacity: 0.7;
        }

        .controls button:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }

        .page-number {
            color: #fff;
            font-size: 16px;
            min-width: 80px;
            text-align: center;
        }

        .thank-you {
            font-size: 4em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .contact {
            font-size: 1.3em;
            color: #666;
            line-height: 1.8;
        }
    </style>
</head>
<body>
    <div class="presentation">
        <!-- Slide 1 -->
        <div class="slide active">
            <h1>Developer Portfolio Mini-Site</h1>
            <p class="subtitle">by Amin Mohamed Abou Amasha</p>
            <p class="info">Supervised by: Essarraj Fouad</p>
            <p class="info">Group: DM101</p>
        </div>

        <!-- Slide 2 -->
        <div class="slide">
            <h2>Analysis: Requirements Specification</h2>
            <ul>
                <li><strong>Context:</strong> Portfolio – Laravel – Services</li>
                <li><strong>Objective:</strong> Profile – Skills – Projects – Contact</li>
                <li><strong>For:</strong> Mallouli Abdelhay</li>
                <li><strong>Users:</strong> Clients – Students</li>
                <li><strong>Pages:</strong> Home – Projects – Details – About</li>
                <li><strong>Design:</strong> Clean – Responsive – Fast – Black and White</li>
            </ul>
        </div>

        <!-- Slide 3 -->
        <div class="slide">
            <h2>Analysis: Use Case Diagram</h2>
            <div class="image-container">
                <img src="imgs/image1.png" alt="Use Case Diagram">
            </div>
            <p class="caption">Use case diagram showing user interactions with the portfolio system</p>
        </div>

        <!-- Slide 4 -->
        <div class="slide">
            <h2>Analysis: Example of an Inspiring Site</h2>
            <div class="image-container">
                <img src="imgs/image2.png" alt="Inspiring Site">
            </div>
            <p class="caption">Reference design showcasing modern portfolio aesthetics</p>
        </div>

        <!-- Slide 5 -->
        <div class="slide">
            <h2>Conception: Schema</h2>
            <div class="image-container">
                <img src="imgs/image3.png" alt="Schema">
            </div>
            <p class="caption">Database schema and system architecture</p>
        </div>

        <!-- Slide 6 -->
        <div class="slide">
            <h2>Conception: Maquette</h2>
            <div class="image-container">
                <img src="imgs/image4.png" alt="Maquette">
            </div>
            <p class="caption">Wireframe and design mockup of the portfolio interface</p>
        </div>

        <!-- Slide 7 -->
        <div class="slide">
            <div class="thank-you">Thank You</div>
            <h2 style="border: none; text-align: center; font-size: 2.5em;">Questions?</h2>
            <div class="contact">
                <p>Contact: Group DM101</p>
                <p>Supervisor: Essarraj Fouad</p>
            </div>
        </div>
    </div>

    <!-- Navigation Controls -->
    <div class="controls">
        <button id="prevBtn" onclick="changeSlide(-1)">◀</button>
        <span class="page-number" id="pageNumber">1 / 7</span>
        <button id="nextBtn" onclick="changeSlide(1)">▶</button>
    </div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;

        function showSlide(n) {
            slides[currentSlide].classList.remove('active');
            
            if (n >= totalSlides) {
                currentSlide = totalSlides - 1;
            } else if (n < 0) {
                currentSlide = 0;
            } else {
                currentSlide = n;
            }
            
            slides[currentSlide].classList.add('active');
            updateControls();
        }

        function changeSlide(direction) {
            showSlide(currentSlide + direction);
        }

        function updateControls() {
            document.getElementById('pageNumber').textContent = `${currentSlide + 1} / ${totalSlides}`;
            document.getElementById('prevBtn').disabled = currentSlide === 0;
            document.getElementById('nextBtn').disabled = currentSlide === totalSlides - 1;
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') {
                changeSlide(-1);
            } else if (e.key === 'ArrowRight' || e.key === ' ') {
                changeSlide(1);
            } else if (e.key === 'Home') {
                showSlide(0);
            } else if (e.key === 'End') {
                showSlide(totalSlides - 1);
            }
        });

        // Initialize
        updateControls();
    </script>
</body>
</html>